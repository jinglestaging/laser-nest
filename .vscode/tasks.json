{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "frontend"
      },
      "options": {
        "cwd": "${workspaceFolder:Frontend}"
      },
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Backend: Dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["start:dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "backend"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Start All Servers",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Frontend: Dev",
        "Backend: Dev"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}